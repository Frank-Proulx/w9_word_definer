<h2>Word: <%= @word.word %></h3>
<h3>Definition: <%= @definition.definition %></h2>
<form action="/words/<%= @word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="definition">Write new definition</label>
  <input id="definition" name="definition" type="text" class="form-control" required>
  <button type="submit" class="btn btn-primary">Update definition</button>
</form>
<form action="/words/<%= @word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-primary">Delete definition</button>
</form>
<a href="/words/<%= @word.id %>">Back to <%= @word.word %></a>